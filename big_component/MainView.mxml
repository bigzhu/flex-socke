	</s:NavigatorContent>
	<!--报表-->
	<s:NavigatorContent id="id_nav_report" width="100%" height="100%">
		<big_component:Report id="id_report" width="100%" height="100%"/>
	</s:NavigatorContent>
</mx:ViewStack>
